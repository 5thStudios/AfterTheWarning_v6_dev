<?xml version="1.0"?>
<!-- 
Umbraco examine is an extensible indexer and search engine.
This configuration file can be extended to create your own index sets.
Index/Search providers can be defined in the UmbracoSettings.config

More information and documentation can be found on GitHub: https://github.com/Shazwazza/Examine/
-->
<ExamineLuceneIndexSets>
  <IndexSet SetName="InternalIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/Internal/"/>
  <IndexSet SetName="InternalMemberIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/InternalMember/">
    <IndexAttributeFields>
      <add Name="id" />
      <add Name="nodeName"/>
      <add Name="updateDate" />
      <add Name="writerName" />
      <add Name="loginName" />
      <add Name="email" />
      <add Name="nodeTypeAlias" />
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="age" Type="NUMBER" />
      <add Name="gender" />
      <add Name="religion" />
      <add Name="race" />
      <add Name="country" />
      <add Name="illuminationStory" />
    </IndexUserFields>
  </IndexSet>
  <IndexSet SetName="ExternalIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/External/" />


  <!-- CUSTOM SEARCHERS -->
  <IndexSet SetName="MessagesIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/Messages/">
    <IndexAttributeFields>
      <add Name="id" />
      <add Name="nodeName"/>
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="publishDate" EnableSorting="true" />
      <add Name="subtitle" />
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="message" />
      <add Name="webmasterMessage" />
    </IncludeNodeTypes>
    <ExcludeNodeTypes />
  </IndexSet>
  <IndexSet SetName="IlluminationStoriesIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/IlluminationStories/">
    <IndexAttributeFields>
      <add Name="id" />
      <add Name="nodeName"/>
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="member"/>
      <add Name="title"/>
      <add Name="experienceType"/>
      <add Name="story"/>
      <add Name="umbracoNaviHide"/>
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="illuminationStory" />
    </IncludeNodeTypes>
    <ExcludeNodeTypes />
  </IndexSet>
  <IndexSet SetName="PrayersIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/Prayers/">
    <IndexAttributeFields>
      <add Name="id" />
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="prayerTitle"/>
      <add Name="requestDate" EnableSorting="true" />
      <add Name="prayerRequestMember"/>
      <add Name="prayer"/>
      <add Name="totalPrayersOffered"/>
      <add Name="currentPercentage"/>
      <add Name="baseCalculationDate"/>
      <add Name="umbracoNaviHide"/>
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="prayerRequest" />
    </IncludeNodeTypes>
    <ExcludeNodeTypes />
  </IndexSet>
  <IndexSet SetName="ArticleIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/Articles/">
    <IndexAttributeFields>
      <add Name="id" />
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="title" />
      <add Name="subtitle" />
      <add Name="originalSource" />
      <add Name="content" />
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="standard" />
    </IncludeNodeTypes>
    <ExcludeNodeTypes />
  </IndexSet>
  <IndexSet SetName="ScriptureIndexSet" IndexPath="~/App_Data/TEMP/ExamineIndexes/Scriptures/">
    <IndexAttributeFields>
      <add Name="id" />
    </IndexAttributeFields>
    <IndexUserFields>
      <add Name="verses" />
    </IndexUserFields>
    <IncludeNodeTypes>
      <add Name="chapter" />
    </IncludeNodeTypes>
    <ExcludeNodeTypes />
  </IndexSet>
</ExamineLuceneIndexSets>