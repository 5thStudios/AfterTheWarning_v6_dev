@using Models;
@using ClientDependency.Core.Mvc;
@inherits UmbracoViewPage
@{ Layout = "TopLevel.cshtml"; }



@{
    //Instantiate variables
    IPublishedContent ipModel = Model;
    IPublishedContent ipParent = ipModel.Parent;
    string docType = ipModel.DocumentTypeAlias;

    //If root page, go to first child page.
    if (docType == Common.docType.IlluminationStatistics)
    {
        Response.Redirect(ipModel.FirstChild().Url);
    }
}

@section Header {
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" />
}



<div class="illuminationStatistics">
    <div class="grid-x grid-margin-x">
        <div class="cell large-6">
            <h4>Filter Type</h4>
            <ul class="filters">
                @foreach (IPublishedContent ip in ipParent.Children.ToList())
                {
                    //Determine if this tab is active
                    string isActive = "";
                    if (docType == ip.DocumentTypeAlias) { isActive = "active"; }

                    //Create filter tab
                    <li class="@isActive"><a href="@ip.Url"><h5>@ip.Name</h5></a></li>
                }
            </ul>
        </div>
        <div class="cell large-18">
            @*<h2 class="text-center">Illumination Statistics</h2>
            <hr />*@
            @RenderBody()
        </div>
    </div>
</div>



@section Footer {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js"></script>
    @RenderSection("Footer", false)
}